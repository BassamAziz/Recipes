<h3>
  <a class="waves-effect waves-light" href= "<%=recipes_path%>" >
    <i class="material-icons medium">keyboard_arrow_left</i>
  </a>
  <%= @recipe.title %>
</h3>
<div class="divider"></div>

<div class="row">
  <div class="col s12 m12">
    <div class="card">
      <div class="card-image">
        <img src="<%= @recipe.photo_url %>" >
      </div>
      <div class="card-content">
        <div class="row">
          <%if @recipe.chef.present? %>
            <div class="chip left">
              <%=@recipe.chef_name%>
            </div>
          <%end%>
        </div>
        <p><%= @recipe.parsed_description %></p>
      </div>
      <div class="card-action">
        <div class="row">
          <% @recipe.tags&.each do |tag| %>
            <span class="tag badge left"><%=tag.name%></span>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
